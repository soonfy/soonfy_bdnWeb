<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>
    <%= title %>
  </title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
  <script src="/jquery/dist/jquery.min.js"></script>
  <link rel='stylesheet' href='/bootstrap/dist/css/bootstrap.min.css' />
  <script src="/bootstrap/dist/js/bootstrap.min.js"></script>
</head>

<body>
  <div class="container">
    <div class="col-xs-3">
      <ul class="nav nav-tabs nav-justified" role="navigation">
        <% if(title === '关键词'){ %>
        <li role="presentation"><a href="/">主页</a></li>
        <li role="presentation" class="active"><a href="/key">关键词</a></li>
        <li role="presentation"><a href="/news">新闻</a></li>
        <% }else if(title === '新闻'){ %>
        <li role="presentation"><a href="/">主页</a></li>
        <li role="presentation"><a href="/key">关键词</a></li>
        <li role="presentation" class="active"><a href="/news">新闻</a></li>
        <% }else{ %>
        <li role="presentation" class="active"><a href="/">主页</a></li>
        <li role="presentation"><a href="/key">关键词</a></li>
        <li role="presentation"><a href="/news">新闻</a></li>
        <% } %>
      </ul>
    </div>
    <nav class="navbar navbar-default navbar-right col-xs-2" role="navigation">
      <ul class="nav navbar-nav navbar-right">
        <% if(user){ %>
          <li><a><span class="glyphicon glyphicon-user"></span><%= user.name %></a></li>
          <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span>退出</a></li>
          <% }else{ %>
            <li><a href="/register"><span class="glyphicon glyphicon-user"></span>注册</a></li>
            <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span>登录</a></li>
            <% } %>
      </ul>
    </nav>
  </div>