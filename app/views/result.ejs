<%- include header %>

<% if(key){ %>
  <div class="container">
    <div class="col-xs-4"></div>
    <div class="page-header col-xs-4">
      <h4>
      <div>
        <strong>关键词位置：</strong><span><%= key.tn %></span>
      </div>
      <div>
        <strong>关键词：</strong><span><%= key.key %></span>
      </div>
      </h4>
      </div>
    <div class="col-xs-4"></div>
  </div>
<% } %>

<% if(key && page == 1){ %>
  <div class="container">
    <div id="keyImg" data-id="<%= key._id %>"></div>
  </div>
<% } %>

  <div class="container">
    <% for(var i=0; i<news.length; i++) { %>
      <div class="panel panel-primary">

        <div class="panel-heading">
          <a href="<%= news[i].url %>" target="_blank" class="list-group-item list-group-item-success">
            <h4 class="list-group-item-heading"><%= news[i].title %></h4>
          </a>
        </div>

        <ul class="list-group panel-info">
          <li class="list-group-item list-group-item-info">
            <strong class="list-group-item-heading">新闻来源：</strong>
            <span class="list-group-item-text"><%= news[i].author %></span>
          </li>
          <div class="split"></div>
          <li class="list-group-item list-group-item-warning">
            <strong class="list-group-item-heading">新闻摘要：</strong>
            <span class="list-group-item-text"><%= news[i].summary %></span>
          </li>
          <div class="split"></div>
          <li class="list-group-item list-group-item-info">
            <strong class="list-group-item-heading">新闻发布时间：</strong>
            <span class="list-group-item-text"><%= moment(news[i].publishedAt).format('YYYY-MM-DD HH:mm:ss') %></span>
          </li>
          <div class="split"></div>
          <li class="list-group-item list-group-item-warning">
            <strong class="list-group-item-heading">新闻采集时间：</strong>
            <span class="list-group-item-text"><%= moment(news[i].createdAt).format('YYYY-MM-DD HH:mm:ss') %></span>
          </li>
        </ul>
      </div>
    <% } %>
  </div>

  <% if(pages > 1){ %>
  <div class="container">
    <div class="col-xs-4"></div>
    <div class="col-xs-4">
      <ul class="pagination">
        <li class="disabled"><a>本页：<%= news.length %>条</a></li>
        <li class="disabled"><a><%= page %> / <%= pages %></a></li>
        <% if(page == 1){ %>
          <li class="disabled"><a>首页</a></li>
          <li class="active"><a><%= page %></a></li>
          <li><a href="/key/info?id=<%= news[0].keyId %>&page=<%= parseInt(page)+1 %>"><%= parseInt(page)+1 %></a></li>
          <li><a href="/key/info?id=<%= news[0].keyId %>&page=<%= pages %>">尾页</a></li>
        <% }else if(page == pages){ %>
          <li><a href="/key/info?id=<%= news[0].keyId %>&page=1">首页</a></li>
          <li><a href="/key/info?id=<%= news[0].keyId %>&page=<%= parseInt(page)-1 %>"><%= parseInt(page)-1 %></a></li>
          <li class="active"><a><%= pages %></a></li>
          <li class="disabled"><a>尾页</a></li>
        <% }else{ %>
          <li><a href="/key/info?id=<%= news[0].keyId %>&page=1">首页</a></li>
          <li><a href="/key/info?id=<%= news[0].keyId %>&page=<%= parseInt(page)-1 %>"><%= parseInt(page)-1 %></a></li>
          <li class="active"><a><%= page %></a></li>
          <li><a href="/key/info?id=<%= news[0].keyId %>&page=<%= parseInt(page)+1 %>"><%= parseInt(page)+1 %></a></li>
          <li><a href="/key/info?id=<%= news[0].keyId %>&page=<%= pages %>">尾页</a></li>
        <% } %>
      </ul>
    </div>
    <div class="col-xs-4"></div>
  </div>
<% } %>

<script src="/javascripts/echarts.js"></script>

  <%- include footer %>